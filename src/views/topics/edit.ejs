<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../static/partials/head.ejs %>
</head>
<body>
  <% include ../static/partials/navbar.ejs %>

  <main class="container">
    <% include ../static/partials/messages.ejs %>
    <h1 class="my-4">Edit Topic</h1>

    <form action="/topics/<%= topic.id %>/update" method="post">
      <div class="form-group">
        <label for="title">Topic title</label>
        <input type="text" name="title" value="<%= topic.title %>" class="form-control" aria-describedby="titleHelp" placeholder="Enter Title" >
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" cols="30" rows="10" class="form-control" placeholder="Enter Description"><%= topic.description %></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </main>

  <% include ../static/partials/baseScripts.ejs %>
</body>
</html>